{
  "schemaVersion": 1,
  "id": "hierophantics_plus",
  "version": "${version}",
  "name": "Hierophantics Plus",
  "description": "Adds new triggers to Hierophantics.",
  "authors": [
    "angelofcreation"
  ],
  "contact": {
    "homepage": "https://angelofcreation.github.io/hierophanticsplus",
    "sources": "https://github.com/angelofcreation/hierophanticsplus"
  },
  "license": "MIT",
  "icon": "assets/hierophantics_plus/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [{
      "adapter": "kotlin",
      "value": "io.github.angelofcreation.hierophanticsplus.fabric.FabricHierophanticsPlus"
    }],
    "client": [{
      "adapter": "kotlin",
      "value": "io.github.angelofcreation.hierophanticsplus.fabric.FabricHierophanticsPlusClient"
    }],
    "server": [{
      "adapter": "kotlin",
      "value": "io.github.angelofcreation.hierophanticsplus.fabric.FabricHierophanticsPlusServer"
    }],
    "fabric-datagen": [{
      "adapter": "kotlin",
      "value": "io.github.angelofcreation.hierophanticsplus.fabric.datagen.FabricHierophanticsPlusDatagen"
    }],
    "modmenu": [{
      "adapter": "kotlin",
      "value": "io.github.angelofcreation.hierophanticsplus.fabric.FabricHierophanticsPlusModMenu"
    }]
  },
  "mixins": [
    "hierophantics_plus-common.mixins.json",
    "hierophantics_plus-fabric.mixins.json"
  ],
  "depends": {
    "minecraft": "${versions.minecraft}",
    "fabricloader": ">=${versions.fabric_loader}",
    "fabric-api": ">=${versions.fabric_api}",
    "fabric-language-kotlin": ">=${versions.kotlin_fabric}",
    "architectury": ">=${versions.architectury}",
    "hexcasting": ">=${versions.hexcasting_dependency}",
    "cloth-config": ">=${versions.clothConfig}"
  },
  "suggests": {
    "modmenu": ">=${versions.modMenu}"
  }
}
